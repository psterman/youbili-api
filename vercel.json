{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/test-ytdlp",
            "methods": ["GET"],
            "dest": "api/test-ytdlp.js"
        },
        {
            "src": "/api/video-info",
            "methods": ["GET"],
            "dest": "api/video-info.js"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}